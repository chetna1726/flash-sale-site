<div class="container">
  <div class="row">
    <h1 class="main-heading panel-heading col-sm-5">Listing deals</h1>
    <%= link_to 'New Deal', new_deal_path, class: "pull-right btn btn-primary" %>
  </div>

  <% unless @deals.empty? %>
    <table class="table">
      <thead>
        <th>Title</th>
        <th>Description</th>
        <th>Price</th>
        <th>Discounted Price</th>
        <th>Quantity</th>
        <th>Publish Date</th>
        <th>Publishable</th>
        <th>Live</th>
      </thead>
      <tbody>
        <%= render @deals %>
      </tbody>
    </table>

    <% end -%>

</div>