<%= form_for @deal, html: { class: 'form-horizontal' } do |f| %>
  <div class="input_form container">
    <div class="form-group">
      <%= f.label :title, class: 'col-sm-2 control-label required' %>
      <div class="col-sm-10">
        <%= f.text_field :title, class: 'form-control', required: true %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :description, class: 'col-sm-2 control-label required' %>
      <div class="col-sm-10">
        <%= f.text_field :description, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :price, class: 'col-sm-2 control-label required' %>
      <div class="col-sm-10">
        <%= f.text_field :price, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :discounted_price, class: 'col-sm-2 control-label required' %>
      <div class="col-sm-10">
        <%= f.text_field :discounted_price, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :quantity, class: 'col-sm-2 control-label required' %>
      <div class="col-sm-10">
        <%= f.text_field :quantity, class: 'form-control' %>
      </div>
    </div>
      <div class="form-group">
        <%= f.label :publish_date, class: 'col-md-2 control-label required' %>
        <div class="col-md-9 col-md-offset-2 input-group date date-field" data-provide: 'datepicker'>
          <%= f.text_field :publish_date, class: 'form-control' %>
          <div class="input-group-addon">
            <!-- <span class="glyphicon glyphicon-th"></span> -->
          </div>
        </div>
      </div>
    <div class="form-group">
        <%= f.label :publishable, 'Mark publishable?', class: 'col-sm-2 control-label required' %>
      <div class="col-sm-2">
        <%= f.check_box :publishable, class: 'form-control required' %>
      </div>
    </div>
    <div class="form-group">
        <%= f.label :live, 'Publish deal?', class: 'col-sm-2 control-label required' %>
      <div class="col-sm-2">
        <%= f.check_box :live, class: 'form-control required' %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit class: 'btn btn-success' %>
      </div>
    </div>
  </div>
<% end -%>