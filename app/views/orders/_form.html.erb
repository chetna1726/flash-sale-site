<%= form_for @admin, html: { class: 'form-horizontal' } do |f| %>
  <div class="input_form container">
    <div class="form-group">
      <%= f.label :first_name, class: 'col-sm-2 control-label required' %>
      <div class="col-sm-10">
        <%= f.text_field :first_name, class: 'form-control', required: true %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :last_name, class: 'col-sm-2 control-label required' %>
      <div class="col-sm-10">
        <%= f.text_field :last_name, class: 'form-control', required: true %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :email, class: 'col-sm-2 control-label required' %>
      <div class="col-sm-10">
        <% if @admin.persisted? %>
          <p class="form-control-static"><%= @admin.email %></p>
        <% else %>
          <%= f.text_field :email, class: 'form-control', required: true %>
        <% end -%>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit class: 'btn btn-success' %>
      </div>
    </div>
  </div>
<% end -%>