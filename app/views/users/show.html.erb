<div class="container-fluid">
  <div class="row">
    <h1 class="main-heading panel-heading">Hi <%= @user.name %>!</h1>
    <%= link_to 'Edit user', edit_user_path(@user), class: "pull-right btn btn-primary" %>
  </div>
  <div class="container">
    <% unless @user.orders.empty? %>
      <table class="table">
        <thead>
          <th>Deal</th>
          <th>Discount</th>
          <th>Sale Price</th>
        </thead>
        <tbody>
          <%= render @user.orders %>
        </tbody>
      </table>
    <% end -%>
  </div>
</div>